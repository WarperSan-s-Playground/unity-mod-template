{
  "$schema": "http://json.schemastore.org/template",

  "name": "Unity Plugin Template",
  "description": "A project structure for doing Unity mods",
  "shortName": "unity-plugin-template",

  "author": "WarperSan",
  "identity": "dev.warpersan.unity-plugin-template",

  "classifications": [ "Mod", "Plugin", "BepInEx" ],
  "tags": {
    "language": "C#",
    "type": "project"
  },

  "sourceName": "PluginTemplate",
  "preferNameDirectory":true,

  "symbols": {
    "Author": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Author",
      "description": "Defines the name of the author of this plugin",
      "isRequired": true,
      "replaces": "__AUTHOR__"
    },
    "Description": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Description",
      "description": "Defines the description to use for this plugin",
      "isRequired": false,
      "defaultValue": "",
      "replaces": "__DESCRIPTION__"
    },
    "Version": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Version",
      "description": "Defines the version to start from for this plugin",
      "isRequired": false,
      "defaultValue": "1.0.0",
      "replaces": "__VERSION__"
    },
    
    "ProjectFramework": {
      "type": "parameter",
      "datatype": "choice",
      "displayName": "Framework",
      "description": "Defines the framework to use for this plugin",
      "isRequired": false,
      "choices": [
        {
          "choice": "netstandard2.1",
          "displayName": ".NET Standard 2.1"
        },
        {
          "choice": "netstandard2.0",
          "displayName": ".NET Standard 2.0"
        },
        {
          "choice": "net46",
          "displayName": ".NET Framework 4.6"
        },
        {
          "choice": "net35",
          "displayName": ".NET Framework 3.5"
        }
      ],
      "allowMultipleValues": false,
      "enableQuotelessLiterals": true,
      "defaultValue": "netstandard2.1",
      "replaces": "__TARGET_FRAMEWORK__"
    },
    
    "IncludeLogger": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Logger",
      "description": "Includes a default logging implementation using BepInEx's logging.",
      "isRequired": false,
      "defaultValue": "true"
    },
    "IncludeHarmony": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Harmony",
      "description": "Includes a default patching implementation using Harmony.",
      "isRequired": false,
      "defaultValue": "true"
    },
    "IncludeMinVer": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Automatic Versioning",
      "description": "Includes the automatic versioning of the project based of the Git tags.",
      "isRequired": false,
      "defaultValue": "true"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!IncludeHarmony)",
          "exclude": [
            "src/Patches/Example_Patches.cs"
          ]
        }
      ]
    }
  ]
}