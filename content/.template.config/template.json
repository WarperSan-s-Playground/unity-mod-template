{
  "$schema": "http://json.schemastore.org/template",

  "name": "Unity Plugin Template",
  "description": "A project structure for doing Unity mods",
  "shortName": "unity-plugin-template",

  "author": "WarperSan",
  "identity": "dev.warpersan.unity-plugin-template",

  "classifications": [ "Mod", "Plugin", "BepInEx" ],
  "tags": {
    "language": "C#",
    "type": "project"
  },

  "sourceName": "PluginTemplate",
  "preferNameDirectory":true,

  "symbols": {
    "Author": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Author",
      "description": "Defines the name of the author of this plugin",
      "isRequired": true,
      "replaces": "__AUTHOR__"
    },
    "Description": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Description",
      "description": "Defines the description to use for this plugin",
      "isRequired": false,
      "defaultValue": "",
      "replaces": "__DESCRIPTION__"
    },
    "Version": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Version",
      "description": "Defines the version to start from for this plugin",
      "isRequired": false,
      "defaultValue": "1.0.0",
      "replaces": "__VERSION__"
    },
    
    "ProjectFramework": {
      "type": "parameter",
      "datatype": "choice",
      "displayName": "Framework",
      "description": "Defines the framework to use for this plugin",
      "isRequired": false,
      "choices": [
        {
          "choice": "netstandard2.1",
          "displayName": ".NET Standard 2.1"
        },
        {
          "choice": "netstandard2.0",
          "displayName": ".NET Standard 2.0"
        },
        {
          "choice": "net46",
          "displayName": ".NET Framework 4.6"
        },
        {
          "choice": "net35",
          "displayName": ".NET Framework 3.5"
        }
      ],
      "allowMultipleValues": false,
      "enableQuotelessLiterals": true,
      "defaultValue": "netstandard2.1",
      "replaces": "__TARGET_FRAMEWORK__"
    },
    "ProjectLogger": {
      "type": "parameter",
      "datatype": "choice",
      "displayName": "Included Logger",
      "description": "Defines the logger implementation to include",
      "isRequired": false,
      "choices": [
        {
          "choice": "BepInEx",
          "displayName": "BepInEx",
          "description": "Uses the logging system from BepInEx.Logging"
        },
        {
          "choice": "System",
          "displayName": "System",
          "description": "Uses the logging system from System.Console"
        },
        {
          "choice": "Unity",
          "displayName": "Unity",
          "description": "Uses the logging system from UnityEngine.Debug"
        }
      ],
      "allowMultipleValues": true,
      "defaultValue": ""
    },
    "ProjectPatcher": {
      "type": "parameter",
      "datatype": "choice",
      "displayName": "Included Patcher",
      "description": "Defines the patcher implementation to include",
      "isRequired": false,
      "choices": [
        {
          "choice": "Harmony",
          "displayName": "Harmony",
          "description": "Uses the patching system from HarmonyLib"
        }
      ],
      "allowMultipleValues": false,
      "defaultValue": ""
    },

    "IncludeMinVer": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Automatic Versioning",
      "description": "Includes the automatic versioning of the project based of the Git tags.",
      "isRequired": false,
      "defaultValue": "true"
    },
    
    "Logger_BepInEx": {
      "type": "computed",
      "value": "ProjectLogger == \"BepInEx\""
    },
    "Logger_System": {
      "type": "computed",
      "value": "ProjectLogger == \"System\""
    },
    "Logger_Unity": {
      "type": "computed",
      "value": "ProjectLogger == \"Unity\""
    },
    "Patcher_Harmony": {
      "type": "computed",
      "valueSource": "ProjectPatcher == \"Harmony\""
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(ProjectPatcher == \"\")",
          "exclude": [
            "src/Patches/Example_Patches.cs"
          ]
        }
      ]
    }
  ]
}