{
  "$schema": "http://json.schemastore.org/template",

  "name": "Unity Plugin Template",
  "description": "A project structure for doing Unity mods",
  "shortName": "unity-plugin-template",

  "author": "WarperSan",
  "identity": "dev.warpersan.unity-plugin-template",

  "classifications": [ "BepInEx", "BepInEx 5" , "Plugin", "Unity" ],
  "tags": {
    "language": "C#",
    "type": "project"
  },

  "sourceName": "PluginTemplate",
  "preferNameDirectory":true,

  "symbols": {
    "Author": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Author",
      "description": "Name of the author of this plugin",
      "isRequired": true,
      "replaces": "__AUTHOR__"
    },
    "Description": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Description",
      "description": "Description of this plugin",
      "isRequired": false,
      "defaultValue": "",
      "replaces": "__DESCRIPTION__"
    },
    "Version": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Version",
      "description": "Version of this plugin",
      "isRequired": false,
      "defaultValue": "1.0.0",
      "replaces": "__VERSION__"
    },
    
    "IncludeLogger": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Logger",
      "description": "Includes a default logging implementation using BepInEx's logging.",
      "isRequired": false,
      "defaultValue": "true"
    },
    "IncludeHarmony": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Harmony",
      "description": "Includes a default patching implementation using Harmony.",
      "isRequired": false,
      "defaultValue": "true"
    },
    "IncludeMinVer": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Automatic Versioning",
      "description": "Includes the automatic versioning of the project based of the Git tags.",
      "isRequired": false,
      "defaultValue": "true"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!IncludeHarmony)",
          "exclude": [
            "src/Patches/Example_Patches.cs"
          ]
        }
      ]
    }
  ]
}