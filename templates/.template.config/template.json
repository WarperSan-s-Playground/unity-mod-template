{
  "$schema": "http://json.schemastore.org/template",

  "name": "Unity Mod Template",
  "description": "A project structure for doing Unity mods",
  "shortName": "unity-mod-template",

  "author": "WarperSan",
  "identity": "dev.warpersan.unity-mod-template",

  "classifications": [ "BepInEx", "BepInEx 5" , "Plugin", "Mod" ],
  "tags": {
    "language": "C#",
    "type": "project"
  },

  "sourceName": "UnityModTemplate",
  "preferNameDirectory":true,

  "symbols": {
    "Author": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Author",
      "description": "Name of the author of this mod",
      "isRequired": true,
      "replaces": "__AUTHOR__"
    },
    "Description": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Description",
      "description": "Description of this mod",
      "isRequired": false,
      "defaultValue": "",
      "replaces": "__DESCRIPTION__"
    },
    "Version": {
      "type": "parameter",
      "datatype": "text",
      "displayName": "Version",
      "description": "Version of this mod",
      "isRequired": false,
      "defaultValue": "1.0.0",
      "replaces": "__VERSION__"
    },
    
    "UseLogger": {
      "type": "parameter",
      "description": "Defines if the project includes a default logging implementation.",
      "datatype": "bool",
      "defaultValue": true
    },
    "UseHarmony": {
      "type": "parameter",
      "description": "Defines if the project includes a default patching implementation using Harmony.",
      "datatype": "bool",
      "defaultValue": true
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".idea/**",
            ".git/**"
          ]
        },
        {
          "condition": "(!UseHarmony)",
          "exclude": [
            "src/Patches/Example_Patches.cs"
          ]
        }
      ]
    }
  ]
}