<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <GUID>dev.warpersan.unity-plugin-template</GUID>
        <Version>1.0.0</Version>
        <Title>WarperSan's Plugin Template</Title>
        <Authors>WarperSan</Authors>
        <Description>Package offering a BepInEx plugin template</Description>
        <License>MIT</License>
        <URL>https://github.com/WarperSan/unity-plugin-template</URL>
    </PropertyGroup>
    
    <PropertyGroup>
        <PackageId>$(GUID)</PackageId>
        <PackageVersion>$(Version)</PackageVersion>
        <PackageType>Template</PackageType>
        <PackageTags>dotnet;BepInEx;Plugin;Template;unity;</PackageTags>
        <PackageProjectUrl>$(URL)</PackageProjectUrl>
        <RepositoryUrl>$(URL)</RepositoryUrl>
        <RepositoryType>Template</RepositoryType>
        <TargetFramework>netstandard2.0</TargetFramework>
        <IncludeContentInPack>true</IncludeContentInPack>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <ContentTargetFolders>content</ContentTargetFolders>
        <NoWarn>$(NoWarn);NU5128</NoWarn>
        <NoDefaultExcludes>true</NoDefaultExcludes>
    </PropertyGroup>
    
    <ItemGroup>
        <Compile Include="templates\src\Plugin.cs" />
        <Content Include="templates\**\*" Exclude="templates\**\bin\**; templates\**\obj\**" />
        <Compile Remove="**\*" />
    </ItemGroup>
</Project>